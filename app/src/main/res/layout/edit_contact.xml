<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/spacing_large"
    android:backgroundTint="@color/white"
    >


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/spacing_large"

        >


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Name"
            android:id="@+id/edit_conctactname"
            >
        </EditText>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:id="@+id/edit_conctactphone"
            >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:padding="@dimen/spacing_middle"
            android:layout_marginEnd="@dimen/spacing_large"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_clear_black_24dp"
            app:tint="@color/red_400"
            android:onClick="CancelEditClick"
            >
        </ImageView>

        <ImageView
            android:padding="@dimen/spacing_middle"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_how_to_reg_black_24dp"
            app:tint="@color/green_400"
            android:onClick="AcceptEditClick"
            >
        </ImageView>



    </LinearLayout>






</LinearLayout>